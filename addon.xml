<?xml version="1.0" encoding="UTF-8"?>
<addon
	id="skin.pipanel"
	version="0.0.3"
	name="PiPanel"
	provider-name="exone">
	<requires>
		<import addon="xbmc.gui" version="3.00"/>
		<import addon="service.skin.widgets" version="0.0.19"/>
	</requires>
	<extension
    point="xbmc.gui.skin"
    defaultthemename="textures.xbt"
    debugging="false"
    effectslowdown="0.75">
		<res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary>Created by Exone, based on Hitchers 'Foundation"</summary>
		<description>My first skin, designed with the Raspberry Pi in mind.</description>
	</extension>
</addon>